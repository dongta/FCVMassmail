<script type="text/javascript">
    $(document).ready(function () {    
        $(":input[type='button']").button();  
        $('#AddRole').click(function () {
            var _userId = $('#UserId').val();
            var _id = $('#RoleId').val();

            if (_userId == '') {
                return false;
            }

            var _parameters = { userId: _userId, id: _id };
            $.ajax({
                url: "/User/AddUserRoleReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#RolesTable').html(data);
                }
            });
        });
    });
</script>
<input name='UserId' id='UserId' type="hidden" value="@ViewBag.UserId" />
<fieldset style="padding: 1em; font: 100%; color: Black; border-color: Black; border-style: solid;
    border-width: thin; border-color: Silver; width: auto">
    <legend><strong>Add Role To User</strong></legend>
    <br />
    <div class="col-md-12">
            Role:
    </div>
    <div class="col-md-10">
        @Html.DropDownList("RoleId", null, string.Empty, new { @class = "form-control" })
    </div>
    <div class="col-md-2">
        <button type="button" id="AddRole" value="Add Role" class="btn btn-primary">Add Role</button>
    </div>
</fieldset>

@model FCV_DutchLadyMail_Model.Models.PERMISSION
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    //$(document).ready(function () {
    //    $(":input[type='submit']").button();

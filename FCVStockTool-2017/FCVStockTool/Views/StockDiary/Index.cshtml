@model StockDiary
@{
    ViewBag.Title = @FCVStockTool.Language.StockDiary.StockDiary.Warehouseshistory;
}

<div class="page-header">
    <h1>@FCVStockTool.Language.StockDiary.StockDiary.Warehouseshistory</h1>
</div>
<div class="panel panel-info">
    <div class="panel-body">
        <div class="col-lg-8">
        </div><!-- /.col-lg-6 -->
        @using (Html.BeginForm())
        {
            <div class="col-lg-4">
                <div class="input-group">
                    <input id="searchString" name="searchString" type="text" class="form-control" placeholder="@FCVStockTool.Language.StockDiary.StockDiary.Search...">
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-search" type="submit">@FCVStockTool.Language.StockDiary.StockDiary.Search</button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        }
    </div>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>@FCVStockTool.Language.ProductItem.ProItem.Date</th>
                <th>@FCVStockTool.Language.ProductItem.ProItem.ShortCode</th>
                <th>@FCVStockTool.Language.ProductItem.ProItem.StatusWarehouse</th>
                <th>@FCVStockTool.Language.ProductItem.ProItem.Description</th>
                @*<th></th>*@
            </tr>
            @foreach (var c in ViewBag.StockDiaries)
            {
                <tr>
                    <td>@c.Date</td>
                    <td>@c.ShortCode</td>
                    <td>@c.Type</td>
                    <td>@c.Note</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <div class="btn-toolbar" role="toolbar" aria-label="...">
            @for (int i = 1; i <= @ViewBag.TotalPage; i++)
            {
                <div class="btn-group" role="group" aria-label="...">
                    <a href="/StockDiary/Index?PageNo=@i" class="btn btn-default display-inline">@i</a>
                </div>
            }
        </div>
    </div>
</div>
@section scripts{
    <script>
        $("#btnDelete").click(function () { return ConfirmDelete() });
    </script>
}

@model IEnumerable<InvoiceDetail>
    <table class="table">
        <tr>
            <th>@FCVStockTool.Language.Invoice.Invoice.Product</th>
            <th>@FCVStockTool.Language.Invoice.Invoice.Warranty</th>
            <th>@FCVStockTool.Language.Invoice.Invoice.UnitPrice</th>
            <th>@FCVStockTool.Language.Invoice.Invoice.Quantity</th>
            <th>@FCVStockTool.Language.Invoice.Invoice.Total</th>
            <th></th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td><center>@(c.Product != null ? c.Product.Name : "")</center></td>
                <td><center>@c.WarrantyPeriod</center></td>
                <td><center>@string.Format("{0:#,##0.00;(#,##0.00);0.00}", @c.UnitPrice)</center></td>
                <td><center>@c.Quantity</center></td>
                <td><center>@string.Format("{0:#,##0.00;(#,##0.00);0.00}", (@c.Quantity * @c.UnitPrice))</center></td>
                <td><center><a href="#" id="btnDetailEdit">Edit</a></center></td>
            </tr>
        }
    </table>


    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="@Url.Content("~/Content/")js/jquery.slimscroll.js"></script>
    <!--Menu sidebar -->
    <script src="@Url.Content("~/Content/")js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="@Url.Content("~/Content/")js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>

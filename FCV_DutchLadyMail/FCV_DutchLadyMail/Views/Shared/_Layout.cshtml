    <!-- scripit init-->

    <script src="@Url.Content("~/Content/")js/scripts.js"></script>
    <script>
        $("#frmChangePass").submit(function (e) {
            e.preventDefault();
            $.post("User/ChangePassword", $(this).serialize(), function (data) {
                alert(data.Message);
                if (data.success == true) {
                    $("#modChangePassword").modal('hide');
                }
            })
        });
    </script>

</body>

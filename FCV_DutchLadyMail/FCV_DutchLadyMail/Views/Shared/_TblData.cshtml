            $("#SearchRecord").click(function () {
                var data = $("#form-search").serialize();
                $.ajax({
                    type: "Post",
                    url: "/MailManagement/GetList",
                    data: data,
                    success: function (List) {
                        var SetData = $("#SetDataList");
                        for (var i = 0; i < List.length; i++) {
                            var Data = "<tr class='row_" + List[i].ID + "'>" +
                                "<td>" + List[i].Name + "</td>" +
                                "<td>" + List[i].Region + "</td>" +
                                "<td>" + List[i].SEMail + "</td>" +
                                "<td>" + List[i].AcMail + "</td>" +

                                "</tr>";
                            SetData.append(Data);
                            $("#LoadingStatus").html(" ");


                            <th class="table-header-repeat line-left minwidth-1" style="min-width: 100px; color: #000; font-size: 13px; ">SE Mails</th>
                            <th class="table-header-repeat line-left minwidth-1" style="min-width: 100px; color: #000; font-size: 13px; ">Ac Mails</th>
                            <th class="table-header-repeat line-left minwidth-1" style="min-width: 160px; color: #000; font-size: 13px; width: 160px; ">Adress</th>
                            <th class="table-header-repeat line-left minwidth-1" style="min-width: 50px; color: #000; font-size: 13px;">Controls</th>
                        </tr>
                    </thead>
                    <tbody id="SetDataList">
                        <tr id="LoadingStatus" style="color:red"></tr>
                    </tbody>

                </table>

